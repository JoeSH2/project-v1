{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "CommonJS"
    }
  },
  "include": [
    "src",
    "./config/jest/setupTest.ts",
    "scripts"
  ]
}